@{
    Layout = null;
    ViewBag.Title = "Bienvenida";
}

<link href="~/Content/css/login.css" rel="stylesheet" />

<div class="login-container">
    <div class="login-card" style="width: 500px; text-align: center;">

        <div class="login-header">
            <h2>¡Entrada Concedida!</h2>
        </div>

        <div class="login-body">
            <div style="display: inline-block; width: 100%;">
                <h1 style="color: #4b3d8b; font-family: 'Georgia', serif;">
                    Bienvenido, @ViewBag.NombreUsuario
                </h1>

                <p style="color: #666;">
                    El sistema confirma que el login funciona perfectamente.
                </p>
                <div style="margin: 20px auto; padding: 15px; border: 2px dashed #dcd0ff; border-radius: 12px; width: 80%; color: #4b3d8b;">
                    <strong>Estado de Conexión:</strong> Base de Datos vinculada con éxito.
                </div>

                <br />
                <a href="@Url.Action("Logout", "Account")" style="text-decoration: none; display: block; margin: 0 auto;">
                    Cerrar Sesión
                </a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    window.history.forward();
    function noBack() {
        window.history.forward();
    }
    var userSession = '@Session["UserID"]';
    if (userSession == null || userSession == "") {
        window.location.href = '@Url.Action("Login", "Account")';
    }
</script>

<body onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
